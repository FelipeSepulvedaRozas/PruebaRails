<h1>ToDo List</h1>

<div class="row">
<div class="col-md-6">
<table class="table table-well">
	<thead>
		<tr>
		<th>ToDo Not Completed:</th>
		</tr>
	</thead>
	<tbody>
		<% @todo_not_completed.each do |todo|%>
		<tr>
			<td><%= todo.description %></td>
			<% end %>
		</tr>
	</tbody>
</table>	
</div>

<div class="col-md-6">
<table class="table table-well">
	<thead>
		<tr>
		<th>ToDo Completed:</th>
		</tr>
	</thead>
	<tbody>
		<% @todo_completed.each do |todo|%>
		<tr>
			<td><%= todo.description %></td>
			<% end %>
		</tr>
	</tbody>
</table>	
</div>		
</div>