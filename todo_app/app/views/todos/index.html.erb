
<%= link_to 'Crear ToDo',todos_new_path%>

<table class=table table-well>	
	<thead>
		<tr>
			<th>Description</th>
			<th>Completed</th>
</thead>
<tbody>
	<% @todos.each do |todo| %>
	<h1> <%= todo.description %> </h1>
	<p><%=todo.completed%></p>
	<%=link_to 'Show ToDo',todo, :class => 'btn btn-primary' %>
</tbody>
<%end%>
</table>