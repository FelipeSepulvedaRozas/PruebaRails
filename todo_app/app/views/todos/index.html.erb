


<h1>ToDo List</h1>

<table class=table table-well>	
	<thead>
		<tr>
			<th>Description</th>
			<th>Completed</th>
</thead>
<tbody>

	<% @todos.each do |todo| %>
	<tr>
	<td><%=todo.description %></td>
	<td><%=todo.completed%></td>
	<td><%=link_to 'Show ToDo',todo, :class => 'btn btn-info' %></td>
	<td><%=link_to 'Edit ToDo',edit_path(todo), :class => 'btn btn-success' %></td>
    <td><%=link_to 'Delete ToDo', { :action => :destroy, :id => todo.id }, :method => :delete, :data => { :confirm => 'Are you sure?'},:class=> 'btn btn-danger' %></td>
    <td><%=link_to 'Completed ToDo',completed_path(todo), :class => 'btn btn-warning' %></td>
</tr>
</div>
</tbody>
<%end%>
</table>